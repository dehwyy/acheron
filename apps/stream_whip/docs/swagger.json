{
    "swagger": "2.0",
    "info": {
        "description": "**Whip** and **Whep** protocol implementation. `OBS =\u003e Server` - *Whip*. `Server \u003c=\u003e Client` (e.g from browser) - *Whep*. It's a **bridge** to make `WebRTC` connection.",
        "title": "WhipWhep API",
        "contact": {
            "name": "dehwyy",
            "url": "https://t.me/dehwyy",
            "email": "dehwyyy@gmail.icom"
        },
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/api/v1",
    "paths": {
        "/whip": {
            "post": {
                "consumes": [
                    "application/sdp"
                ],
                "produces": [
                    "application/sdp"
                ],
                "parameters": [
                    {
                        "description": "*SDPOffer* generated by **OBS**",
                        "name": "SDPOffer",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "type": "string",
                        "description": "*Authorization* token set by **OBS**",
                        "name": "Authorization",
                        "in": "header",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "ServerSDPAnswer",
                        "schema": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    },
    "externalDocs": {
        "description": "IETF WHIP",
        "url": "https://datatracker.ietf.org/doc/html/draft-ietf-wish-whip-16"
    }
}